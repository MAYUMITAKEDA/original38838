<h1>ユーザー登録内容編集機能</h2>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render "shared/error_messages", model: f.object %>

  <div class="field">
    <%= f.label :email, "メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, maxlength: "20" %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール(150字まで)" %><br />
    <%= f.text_area :profile, class: :form_text ,maxlength:"150" %>
  </div>

  <div class="actions">
    <%= f.submit "編集完了", class: :form_btn %>
  </div>
<% end %>

<%= link_to "戻る", user_path(@user.id) %>
